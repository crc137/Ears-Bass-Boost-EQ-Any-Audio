{
  "manifest_version": 3,
  "name": "Ears: Bass Boost, EQ Any Audio!",
  "short_name": "Ears",
  "description": "EQ any audio you find on the web, live! Crank the bass, dim the highs, up the vocals: all with Ears!",
  "version": "1.4.1",
  "author": "Alberto Clemente",
  "icons": {
    "16": "image/logo.16.png",
    "32": "image/logo.32.png",
    "48": "image/logo.48.png",
    "64": "image/logo.64.png",
    "128": "image/logo.128.png"
  },
  "action": {
    "default_icon": "image/logo.128.png",
    "default_popup": "views/popup.html"
  },
  "side_panel": {
    "default_path": "views/presets.html"
  },
  "permissions": ["activeTab", "tabCapture", "tabs", "storage", "offscreen"],
  "background": {
    "service_worker": "scripts/sw.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}